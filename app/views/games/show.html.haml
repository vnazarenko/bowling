%h1
  It's your Bowling game

- if @game.in_progress?
  .row
    = form_for @game do |f|
      Enter pins number
      = text_field_tag "score", '', style: "width: 50px; display: inline"
      or just press
      = f.submit "Bowl", class: "button success"
- else
  %h1
    GAME OVER

.row.mtl
  %table{align: "center", border: "1", cellpadding: "3", cellspacing: "0", width: "90%"}
    %tbody
      %tr{align: "center"}
        %td Player
        %td 1
        %td 2
        %td 3
        %td 4
        %td 5
        %td 6
        %td 7
        %td 8
        %td 9
        %td 10
        %td Total
      - @scoreboard.each do |player|
        %tr{align: "center", class: "#{"current" if player[:current]}"}
          %td= player[:player_name]
          - player[:scores][0..-3].each do |score|
            %td= score
          %td= "#{player[:scores][-2]} #{player[:scores][-1]}"
          %td= player[:total_score]
